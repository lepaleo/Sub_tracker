<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/Prof_layout"
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        android:background="@drawable/gradient_background"
        >


        <Switch
            android:id="@+id/switch_Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:layout_toRightOf="@+id/Profile_pic"
            android:layout_centerVertical="true"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Profile_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/Profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Profile_pic"/>

        <ImageButton
            android:id="@+id/Settings_button"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_below="@+id/Profile_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_settings_black_24dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Prof_layout2"
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Set new username:"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/Change_name_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            />

        <EditText
            android:id="@+id/Input_settings"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_above="@+id/Change_name_button"
            android:layout_centerHorizontal="true"/>




    </RelativeLayout>


</LinearLayout>