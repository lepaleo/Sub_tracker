<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Setting_fragg"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">


    <LinearLayout
        android:id="@+id/Prof_layout"
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/Text_choose_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your icon->"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Profile_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/Profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Profile_pic"/>

        <ImageButton
            android:id="@+id/Settings_button"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_below="@+id/Profile_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_settings_black_24dp"
            />

        <TextView
            android:id="@+id/Change_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Set new username:"
            android:textSize="20sp"/>


        <EditText
            android:id="@+id/Input_settings"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_above="@+id/Change_name_button"
            android:layout_centerHorizontal="true"
            android:inputType="textCapSentences"
            android:gravity="center"
            />


        <Button
            android:id="@+id/Change_name_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            />

    </LinearLayout>




</RelativeLayout>