<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/back_button_not"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back_button_not"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="0dp"
        >
        <TextView
            android:id="@+id/Payment_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today is the day to pay"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/sub_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.95$"
            android:textSize="25sp"
            />



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you want delete that notification."
        android:textSize="25sp"
        android:gravity="center_vertical"
        android:layout_above="@+id/delete_not"
        android:paddingStart="15dp"
        android:paddingEnd="0dp"
        />
    <Button
        android:id="@+id/delete_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Delete"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="0dp"
        />


</RelativeLayout>